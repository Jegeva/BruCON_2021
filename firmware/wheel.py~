#! /usr/bin/python3
import math

stepnum=1024
resolutionbits=10

r=[int((2**resolutionbits)*(math.sin(              i*(math.pi/stepnum)))) for i in range(stepnum)]
g=[int((2**resolutionbits)*(math.sin((math.pi/3)  +i*(math.pi/stepnum)))) for i in range(stepnum)]
b=[int((2**resolutionbits)*(math.sin((2*math.pi/3)+i*(math.pi/stepnum)))) for i in range(stepnum)]

